<div class="text-center">
  <h3 class="text-center">Here's all your recipes:</h3>
    <% @recipes.each_with_index do |recipe, i| %>
        <li class="text-left">
          <%= i + 1 %>
          <%= recipe.name %>
        </li>
  <% end %>
</div>

<div class="text-center">
  <form action="/delete">
    <p>Please, enter the number of the recipe to delete <input type="text" name="delete_number"/></p>
    <input type="submit">
  </form>
</div>
<a href="/" class="btn btn-lrg">Return</a>
